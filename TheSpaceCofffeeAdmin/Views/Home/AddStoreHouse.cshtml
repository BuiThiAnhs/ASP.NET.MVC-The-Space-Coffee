@model TheSpaceCofffeeAdmin.Models.TbKhoVatTuCh
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddStoreHouse";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Thêm Vật Tư Vào Kho</h1>


<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="AddStoreHouse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaCuaHang" class="control-label text-white">Tên Cửa Hàng</label>
                <select asp-for="MaCuaHang" class="form-control bg-transparent" asp-items="ViewBag.MaCuaHang"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaVatTu" class="control-label text-white">Mã Vật Tư </label>
                <select asp-for="MaVatTu" class="form-control bg-transparent" asp-items="ViewBag.MaVatTu"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label text-white"> Số Lượng</label>
                <input asp-for="SoLuong" class="form-control bg-transparent" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=" Hoàn Thành" class="btn btn-success rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StoreHouse">Trở lại bảng</a>
</div>

