@model TheSpaceCofffeeAdmin.Models.TbSanPham
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Sửa Thông Tin Sản Phẩm</h1>

<h4>TbSanPham</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSanPham" />
            <div class="form-group">
                <label asp-for="TenSanPham" class="control-label">Tên Sản Phẩm</label>
                <input asp-for="TenSanPham" class="form-control bg-secondary" />
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label">Giá Bán</label>
                <input asp-for="GiaBan" class="form-control bg-secondary" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                <input asp-for="HinhAnh" class="form-control bg-secondary" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <input asp-for="GhiChu" class="form-control bg-secondary" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNhomSp" class="control-label">Mã Nhóm Sản Phẩm</label>
                <select asp-for="MaNhomSp" class="form-control bg-secondary" asp-items="ViewBag.MaNhomSp"></select>
                <span asp-validation-for="MaNhomSp" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value=" Lưu" class="btn btn-success rounded-pill" />
            </div
        </form>
    </div>
</div>

<div>
    <a asp-action="ListProducts">Back to List</a>
</div>
