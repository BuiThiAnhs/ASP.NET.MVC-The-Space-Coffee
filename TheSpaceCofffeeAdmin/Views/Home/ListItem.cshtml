@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbVatTu>;

@{
    ViewData["Title"] = "FindStore";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<form class=" d-none d-md-block m-2 p-2">
    <input class="w-75 form-control-sm bg-dark border-0" type="search" placeholder="Search">
    <button type="button" class="btn btn-outline-secondary m-2 bg-light">Tìm Kiếm   </button>
    <button type="button" class="btn btn-square btn-outline-secondary m-2"> <a asp-action="AddItem"><i class="fa fa-plus"></i></a>  </button>
</form>
<h1> Truy Xuất Vật Tư </h1>
<div class="bg-secondary rounded h-75 p-4 m-1">


    
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Mã Vật Tư
                </th>
                <th>
                    Tên Vật Tư
                </th>
                <th>
                    Đơn Vị Tính
                </th>
                <th>
                    Ghi Chú
                </th>
                <th>
                    Kho Vật Tư
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaVatTu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenVatTu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonViTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TbKhoVatTuChes)
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-dark"> <a asp-action="Delete" asp-route-id="@item.MaVatTu">Edit</a> </button>
                        <button type="button" class="btn btn-outline-dark"> <a asp-action="Delete" asp-route-id="@item.MaVatTu">Delete</a> </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.PagedListPager(Model, page => Url.Action("ListItem", new {page= page}), new X.PagedList.Web.Common.PagedListRenderOptions(){
            LiElementClasses = new List<String>{"bg-secondary page-item"},
            PageClasses = new List<String>{"page-link"}
        })