@using TheSpaceCofffeeAdmin.Models;
@using X.PagedList.Mvc.Core;
@model List<HoaDonBan>;
@{
    ViewData["Title"] = "Hóa đơn " + Model[0].MaHoaDonBan;
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    long ThanhTien = 0;
    foreach (var item in Model)
    {
        ThanhTien += (long)item.TongTien;
    }
}

<h2>Chi tiết hóa đơn bán mã: @Model[0].MaHoaDonBan</h2>

<p>
    Ngày bán hàng: @Model[0].NgayBan
</p>
<p>
    Mã khách hàng: @Model[0].MaKhachHang
</p>
<h3>Danh sách sản phẩm</h3>
<div class="bg-secondary rounded h-75 p-4 m-1">

    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>Số lượng</th>
                <th>
                    Giá bán
                </th>
                <th>Giảm giá</th>
                <th>
                    Tổng cộng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.GiaBan</td>
                    <td>@item.GiamGia</td>
                    <td>@item.TongTien</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Tổng tiền cần thanh toán: @ThanhTien VNĐ</h2>
</div>